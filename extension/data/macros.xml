<?xml version="1.0" encoding="UTF-8"?>
<!--
Name:      macros.xml
Purpose:   vi macros and variables for wxextension.
Author:    Anton van Wezenbeek
Copyright: (c) 2012, Anton van Wezenbeek

Each macro can have several commands, a 
command is encoded if the content refers to a
control character.  

Variables are expanded when playing back the macro. The next
types are supported:
- BUILTIN:     expansion is done using internal value
- ENVIRONMENT: expansion is done using environment value
- INPUT:       expansion is done by asking value from user
-->
<macros>
  <variable name="AUTHOR" prefix="Author:    " type="INPUT"/>
  <variable name="CB" type="BUILTIN"/>
  <variable name="CE" type="BUILTIN"/>
  <variable name="CL" type="BUILTIN"/>
  <variable name="DATE" type="BUILTIN"/>
  <variable name="DATETIME" type="BUILTIN"/>
  <variable name="EMAIL"/>
  <variable name="FILENAME" type="BUILTIN"/>
  <variable name="HOME" type="ENVIRONMENT"/>
  <variable name="NL" type="BUILTIN"/>
  <variable name="PURPOSE" type="INPUT" prefix="Purpose:   "/>
  <variable name="TIME" type="BUILTIN"/>
  <variable name="YEAR" type="BUILTIN"/>
  <macro name="hdr">
    <command>:1</command>
    <command>O</command>
    <command encoded="true">27</command>
    <command>@CL@</command>
    <command>o</command>
    <command encoded="true">27</command>
    <command>@CB@</command>
    <command>i Name:      </command>
    <command encoded="true">27</command>
    <command>@FILENAME@</command>
    <command>o</command>
    <command encoded="true">27</command>
    <command>@PURPOSE@</command>
    <command>o</command>
    <command encoded="true">27</command>
    <command>@AUTHOR@</command>
    <command>o</command>
    <command encoded="true">27</command>
    <command>@CB@</command>
    <command>i Copyright: (c) </command>
    <command encoded="true">27</command>
    <command>@YEAR@</command>
    <command>i </command>
    <command encoded="true">27</command>
    <command>@AUTHOR@</command>
    <command>o</command>
    <command encoded="true">27</command>
    <command>@CL@</command>
    <command>o</command>
    <command encoded="true">27</command>
  </macro>
</macros>

      <if cond="PLATFORM_UNIX=='1'"><sys-lib>odbc</sys-lib></if>
    </if>
    
    <wx-lib>aui</wx-lib>
    <wx-lib>stc</wx-lib>
    <wx-lib>html</wx-lib>
    <wx-lib>adv</wx-lib>
    <wx-lib>xml</wx-lib> 
